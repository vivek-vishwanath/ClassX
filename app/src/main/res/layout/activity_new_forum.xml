<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".ui.forums.fragment.NewForumActivity">

    <EditText
        android:id="@+id/eventNameEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:background="@drawable/rounded_box"
        android:ems="10"
        android:hint="Group Name"
        android:inputType="textPersonName"
        android:padding="16dp"
        android:textColor="@color/text_color"
        android:textColorHint="@color/text_color_hint"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/createEventButton"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/rounded_blue"
        android:onClick="createGroup"
        android:text="Create Group"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/descriptionEditText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/rounded_box"
        android:ems="10"
        android:gravity="top|left"
        android:hint="Description"
        android:inputType="textMultiLine"
        android:padding="16dp"
        android:textColor="@color/text_color"
        android:textColorHint="@color/text_color_hint"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/privacyCheckBox"
        app:layout_constraintEnd_toEndOf="@+id/eventNameEditText"
        app:layout_constraintStart_toStartOf="@+id/eventNameEditText"
        app:layout_constraintTop_toBottomOf="@+id/eventNameEditText" />

    <CheckBox
        android:id="@+id/privacyCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="32dp"
        android:buttonTint="@color/text_color"
        android:text=" Private"
        android:textColor="@color/text_color"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/forumTypeSpinner"
        app:layout_constraintStart_toStartOf="@+id/descriptionEditText" />

    <Spinner
        android:id="@+id/forumTypeSpinner"
        android:layout_width="256dp"
        android:layout_height="64dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/rounded_box"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/createEventButton"
        app:layout_constraintStart_toStartOf="@+id/descriptionEditText" />

    <TextView
        android:id="@+id/keyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:textColor="@color/text_off_color"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/privacyCheckBox"
        app:layout_constraintStart_toEndOf="@+id/privacyCheckBox"
        app:layout_constraintTop_toTopOf="@+id/privacyCheckBox" />

</androidx.constraintlayout.widget.ConstraintLayout>