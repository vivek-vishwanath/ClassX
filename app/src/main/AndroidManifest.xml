<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.classx">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.settings.ThemeActivity"/>
        <activity android:name=".ui.forums.navigation.calendar.AddEventActivity" />
        <activity android:name=".ui.forums.fragment.FindForumActivity" />
        <activity
            android:name=".ui.forums.navigation.NavigationDrawerActivity"
            android:label="@string/title_activity_navigation"
            android:theme="@style/Theme.ClassX.NoActionBar" />
        <activity android:name=".ui.forums.fragment.NewForumActivity" />
        <activity android:name=".ui.messages.ChatActivity" />
        <activity android:name=".ui.messages.FindContactActivity" />
        <activity android:name=".ui.activities.SocialMediaActivity" />
        <activity
            android:name=".ui.activities.BottomNavigationActivity"
            android:label="@string/title_activity_bottom_navigation"
            android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar" />
        <activity android:name=".ui.activities.PrivacyPolicyActivity" />
        <activity android:name=".ui.activities.SignUpActivity" />
        <activity android:name=".ui.activities.CreateAccountActivity" />
        <activity android:name=".ui.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>